{
  "name": "terminus",
  "version": "0.0.0",
  "description": "Universal terminal helper",
  "author": "Nicolas Jakob <nicow.jakob@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/njakob/terminus",
  "repository": {
    "type": "git",
    "url": "git://github.com/njakob/terminus.git"
  },
  "bugs": {
    "url": "https://github.com/njakob/terminus/issues"
  },
  "keywords": [
    "universal",
    "isomorphic",
    "browser",
    "color",
    "colour",
    "terminal",
    "term",
    "console",
    "cli",
    "command-line",
    "log",
    "logger",
    "helper",
    "api",
    "library"
  ],
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "babel -d lib src && flow gen-flow-files --out-dir lib src/index.js",
    "lint": "eslint --fix .",
    "flow": "flow check",
    "test": "npm run flow && npm run build",
    "bump-major": "npm version major -m \"Bump to %s\"",
    "bump-minor": "npm version minor -m \"Bump to %s\"",
    "bump-patch": "npm version patch -m \"Bump to %s\"",
    "prepublish": "npm run test"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-syntax-flow": "^6.13.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^3.12.1",
    "eslint-config-njakob": "~3.0.6",
    "eslint-plugin-flowtype": "^2.18.2",
    "eslint-plugin-import": "^2.2.0",
    "flow-bin": "^0.32.0"
  }
}
